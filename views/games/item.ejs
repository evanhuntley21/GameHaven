<%- include('../partials/header.ejs')%>
    <section class="container mb-5">
        <div class="row container">
            <div class="col-3"></div>
            <div class="col-3 mx-4 mt-5 listingContainer rounded">
                <h3 class="text-center"><%=game.title%></h3>
                <div class="itemContainer rounded"><img class="imgholder" src="/images/<%=game.image%>" alt=""></div>
                <%if(game.active){%>
                <div class="col d-flex justify-content-center"><form class="text-center"> <input type="hidden" id="hide" name="seller" value=<%=game.seller%>><input class="form-control mt-2" type="number" name="amount" id="itemprice" minvalue ="0.01" placeholder="Enter your offer here" required><button type="submit" class="btn btn-success mb-2 mt-2"
                    formmethod = "POST" formaction = "/games/<%= game.id%>/offers">Make offer</button></form></div>
                <%}%>
            </div>
            <div class="col-5 mt-5">
                <div class="row text-left">
                    <h6 class="col-10 text-left">Price: $<%=game.price%></h6>

                    <div class="row">
                        <h6 class="col-10"><%=game.active ?"The highest offer is currently: $"+ game.highestOffer:"Item has been sold"%></h6>
                    </div>
                    <div class="row">
                        <h6 class="col-10">Number of offers: <%=game.offers%></h6>
                    </div>
                    <div class="row">
                        <h6 class="itemCondition col-10">Condition: <%=game.condition%></h6>
                    </div>
                    <div class="row">
                        <h6 class="itemCondition col-10">Seller: <%=game.seller.firstName + " " + game.seller.lastName%></h6>
                    </div>
                    <div class="row">
                        <h6 class="itemCondition col-10">Description:</h6>
                        <p><%=game.details%></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="d-flex flex-grow-1"></div>
<%- include('../partials/footer.ejs')%>