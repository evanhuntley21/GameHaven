<%- include('../partials/header.ejs')%>
    <section class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col mt-4">
                <h2>List Your Games Here!</h2>
            </div>
        </div>
    </section>
    <form action="/games/<%=game.id%>?_method=PUT" class="container mt-5 listingform" method = "POST">
        <fieldset class="row align-items-center mb-3">

            <div class="col justify-content-end d-flex">
                <label class="form-label" for="Condition">Condition:</label>
            </div>
            <div class="col-8">
                <select class="form-select" name="condition" id="Condition" required>
                    <option label ="No Condition Selected"></option>
                    <option <% if (game.condition === 'Like New'){%> selected<%}%>>Like New</option>
                    <option <% if (game.condition === 'Lightly Used'){%> selected<%}%>>Lightly Used</option>
                    <option <% if (game.condition === 'Moderately Used'){%> selected<%}%>>Moderately Used</option>
                    <option <% if (game.condition === 'Heavily Used'){%> selected<%}%>>Heavily Used</option>
                    <option <% if (game.condition ==='Needs Repair'){%> selected<%}%>>Needs Repair</option>
                </select>
            </div>
        </fieldset>
        <fieldset class="row align-items-center mb-3">
            <div class="col justify-content-end d-flex">
                <label class="form-label" for="gametitle">Title:</label>
            </div>
            <div class="col-8"><input class="form-control" type="text" name="title" id="gametitle" value="<%=game.title%>" required></div>

        </fieldset>
        <fieldset class="row align-items-center mb-3">
            <div class="col justify-content-end d-flex">
                <label class="form-label" for="itemprice">Price:</label>
            </div>
            <div class="col-8"><input class="form-control" type="number" name="price" id="itemprice" value="<%=game.price%>" required></div>
        </fieldset>
        <fieldset class="row align-items-center mb-3">
            <div class="col justify-content-end d-flex">
                <label class="form-label" for="details">Details:</label>
            </div>
            <div class="col-8"><textarea class="form-control" name="details" id="details" minlength = "20" maxlength="500" required><%=game.details%></textarea></div>
        </fieldset>
        <fieldset class="row mb-3">
            <div class="col">
            </div>
            <div class="col-8"><button class="btn btn-primary col-12" type="submit" name="Submit" id="SubmitForm">Update Listing</button></div>
        </fieldset>
    </form>
    <div class="d-flex flex-grow-1"></div>
<%- include('../partials/footer.ejs')%>